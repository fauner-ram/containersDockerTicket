pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/fauner-ram/containersDockerTicket.git'
            }
        }
        stage('Build Frontend Docker Image') {
            steps {
                dir('frontend') {
                    script {
                        sh 'docker build -t frontend-test .'
                    }
                }
            }
        }
        stage('Run Frontend Tests') {
            steps {
                dir('frontend') {
                    script {
                        sh 'docker run --rm frontend-test /bin/sh -c "export CHROME_BIN=/usr/bin/chromium && node --max-old-space-size=1024 ./node_modules/@angular/cli/bin/ng test --watch=false --browsers=ChromiumHeadless"'
                    }
                }
            }
        }
    }
}
